@model IEnumerable<VidlyDemo.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() < 1)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Customer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(customer.Name, "Details", new { customer.Id })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
